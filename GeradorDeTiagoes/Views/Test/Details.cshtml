@using GeradorDeTiagoes.WebApp.ViewModels
@model TestDetailsViewModel

@{
    ViewBag.Titulo = "Detalhes do Teste";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes do Teste</h3>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                        @ViewBag.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="row my-4">
                    <div class="mt-2">
                        <label class="control-label"><strong>Título:</strong> @Model.Title</label>
                    </div>

                    <div class="mt-2">
                        <label class="control-label"><strong>Série:</strong> @Model.GradeLevel</label>
                    </div>

                    <div class="mt-2">
                        <label class="control-label"><strong>Disciplina:</strong> @Model.DisciplineName</label>
                    </div>

                    <div class="mt-2">
                        <label class="control-label"><strong>Matéria:</strong> @(Model.IsRecovery ? "Prova de Recuperação" : Model.SubjectName)</label>
                    </div>

                    <div class="mt-2">
                        <label class="control-label"><strong>Quantidade de Questões:</strong> @Model.QuestionCount</label>
                    </div>

                    <div class="mt-2">
                        <label class="control-label"><strong>Questões no Teste:</strong> @Model.QuestionsInTest</label>
                    </div>
                </div>

                <div class="d-flex gap-2 justify-content-end mt-4">
                    <a href="/tests/pdf/@Model.Id" class="btn btn-primary">Gerar PDF</a>
                    <a href="/tests/pdf/@Model.Id?gabarito=true" class="btn btn-secondary">Gerar Gabarito</a>
                    <a href="/tests/duplicar/@Model.Id" class="btn btn-outline-primary">Duplicar Teste</a>
                </div>

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a href="/tests">Voltar para a listagem</a>
                </div>
            </div>
        </div>
    </div>
</div>