@using GeradorDeTiagoes.WebApp.Models
@using GeradorDeTiagoes.WebApp.ViewModels
@model ViewDisciplineViewModel

@{
    ViewBag.Titulo = "Visualização de Disciplinas";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewBag.Titulo</h2>
    <a class="btn btn-primary" asp-action="Create">
        <span class="material-icons align-middle">add</span>
        Cadastrar Nova
    </a>
</div>

<hr />

<div class="discipline-container">

    <!-- Cabeçalho apenas para desktop -->
    <div class="row d-none d-md-flex fw-bold border-bottom pb-2 mb-2">
        <div class="col-md-8">Nome</div>
        <div class="col-md-4 text-end">Ações</div>
    </div>

    @foreach (var discipline in Model.Disciplines)
    {
        <div class="row border-bottom py-2 align-items-center g-2 flex-md-nowrap">

            <!-- MOBILE: Card para celular -->
            <div class="col-12 d-md-none">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@discipline.Name</h5>
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Details" asp-route-id="@discipline.Id" class="btn btn-icon btn-outline-secondary" title="Detalhes">
                                <span class="material-icons">visibility</span>
                            </a>
                            <a asp-action="Edit" asp-route-id="@discipline.Id" class="btn btn-icon btn-outline-primary" title="Editar">
                                <span class="material-icons">edit</span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@discipline.Id" class="btn btn-icon btn-outline-danger" title="Excluir">
                                <span class="material-icons">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- DESKTOP: Linha da "tabela" -->
            <div class="d-none d-md-flex col-md-8 align-items-center">@discipline.Name</div>
            <div class="d-none d-md-flex col-md-4 justify-content-end gap-2">
                <a asp-action="Details" asp-route-id="@discipline.Id" class="btn btn-icon btn-outline-secondary" title="Detalhes">
                    <span class="material-icons">visibility</span>
                </a>
                <a asp-action="Edit" asp-route-id="@discipline.Id" class="btn btn-icon btn-outline-primary" title="Editar">
                    <span class="material-icons">edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@discipline.Id" class="btn btn-icon btn-outline-danger" title="Excluir">
                    <span class="material-icons">delete</span>
                </a>
            </div>
        </div>
    }
</div>
