@using GeradorDeTiagoes.WebApp.Models

@model DeleteQuestionViewModel

@{
    ViewBag.Titulo = "Exclusão de Questão";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>

                <p class="mt-4">Você deseja realmente excluir a matéria "@Model.Statement"?</p>

                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/questions">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

