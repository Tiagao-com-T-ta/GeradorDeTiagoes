@using GeradorDeTiagoes.WebApp.Models
@model EditQuestionViewModel

@{
    ViewBag.Titulo = "Cadastro de Questões";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Edit">
                    <h3>Edição de Questão</h3>

                    @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                            @ViewData.ModelState["Name"]!.Errors.First().ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Text" class="control-label fs-5">Enunciado:</label>
                        <input asp-for="Text" class="form-control" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="SubjectName" class="control-label fs-5">Contato:</label>
                        <select asp-for="SubjectName" class="form-control" asp-items="Model.Subjects">
                            <option value="">Nenhum</option>
                        </select>
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/questions">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}