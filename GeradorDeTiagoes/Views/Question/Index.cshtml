@using GeradorDeTiagoes.WebApp.Models
@model ViewQuestionViewModel

@{
    ViewBag.Titulo = "Visualização de Questões";
}

<div class="d-grid d-lg-flex flex-wrap gap-2 align-items-center mb-3">
    <a class="btn btn-primary px-5" asp-action="Create">
        <i class="bi bi-plus"></i>
        Cadastrar Nova
    </a>
</div>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var question in Model.Questions)
    {
        <div class="col-12 col-md-4 coluna-card">
            <a asp-action="Details" asp-route-id="@question.Id" class="text-decoration-none">
                <div class="card border-0 hover-shadow" style="min-height: 220px; cursor: pointer;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-truncate" title="@question.Statement">@question.Statement</h5>

                            <p class="card-text mb-1">
                                <span class="fw-semibold">Disciplina:</span> @question.DisciplineName
                            </p>
                            <p class="card-text mb-1">
                                <span class="fw-semibold">Matéria:</span> @question.SubjectName
                            </p>
                            <p class="card-text mb-1">
                                <span class="fw-semibold">Qtd. Alternativas:</span> @question.AlternativesCount
                            </p>
                        </div>

                        <div class="card-footer bg-transparent border-0 p-0 mt-3 d-flex justify-content-end gap-2">
                            <a title="Editar" asp-action="Edit" asp-route-id="@question.Id"
                               class="btn btn-primary rounded-circle opcao-card"
                               onclick="event.stopPropagation()">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <a title="Excluir" asp-action="Delete" asp-route-id="@question.Id"
                               class="btn btn-danger rounded-circle opcao-card"
                               onclick="event.stopPropagation()">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease;
    }

    .opcao-card {
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .coluna-card {
        /* controla espaçamento dos cards, se quiser ajustar */
    }

    /* Limitar texto muito longo com tooltip */
    .text-truncate {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>
