@using GeradorDeTiagoes.WebApp.Models
@model ViewQuestionViewModel

@{
    ViewBag.Titulo = "Visualização de Questões";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewBag.Titulo</h2>
    <a class="btn btn-primary" asp-action="Create">
        <span class="material-icons align-middle">add</span>
        Cadastrar Nova
    </a>
</div>

<hr />

<div class="row d-none d-md-flex fw-bold border-bottom pb-2 mb-2">
    <div class="col-md-4">Enunciado</div>
    <div class="col-md-3">Disciplina</div>
    <div class="col-md-3">Matéria</div>
    <div class="col-md-1 text-center">Alternativas</div>
    <div class="col-md-1 text-end">Ações</div>
</div>

@foreach (var question in Model.Questions)
{
    <div class="row border-bottom py-2 align-items-center g-2 flex-md-nowrap">

        <div class="col-12 d-md-none">
            <a asp-action="Details" asp-route-id="@question.Id" class="text-decoration-none text-dark">
                <div class="card hover-shadow" style="cursor: pointer;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-truncate" title="@question.Statement">@question.Statement</h5>
                            <p class="mb-1"><strong>Disciplina:</strong> @question.DisciplineName</p>
                            <p class="mb-1"><strong>Matéria:</strong> @question.SubjectName</p>
                            <p class="mb-1"><strong>Qtd. Alternativas:</strong> @question.AlternativesCount</p>
                        </div>
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@question.Id" class="btn btn-icon btn-outline-primary"
                               title="Editar" onclick="event.stopPropagation()">
                                <span class="material-icons">edit</span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@question.Id" class="btn btn-icon btn-outline-danger"
                               title="Excluir" onclick="event.stopPropagation()">
                                <span class="material-icons">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="d-none d-md-flex col-md-4 text-truncate" title="@question.Statement">@question.Statement</div>
        <div class="d-none d-md-flex col-md-3">@question.DisciplineName</div>
        <div class="d-none d-md-flex col-md-3">@question.SubjectName</div>
        <div class="d-none d-md-flex col-md-1 justify-content-center">@question.AlternativesCount</div>
        <div class="d-none d-md-flex col-md-1 justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@question.Id" class="btn btn-icon btn-outline-primary" title="Editar">
                <span class="material-icons">edit</span>
            </a>
            <a asp-action="Delete" asp-route-id="@question.Id" class="btn btn-icon btn-outline-danger" title="Excluir">
                <span class="material-icons">delete</span>
            </a>
        </div>
    </div>
}
