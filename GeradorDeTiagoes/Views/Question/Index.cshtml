@using GeradorDeTiagoes.WebApp.Models
@model ViewQuestionViewModel

@{
    ViewBag.Titulo = "Visualização de Questões";
}

<div class="d-grid d-lg-flex flex-wrap gap-2 align-items-center">
    <a class="btn btn-primary px-5" asp-action="Create">
        <i class="bi bi-plus"></i>
        Cadastrar Nova
    </a>
</div>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var question in Model.Questions)
    {
        <div class="col-12 col-md-3 coluna-card">
            <div class="card border-0" style="height: 235px;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-baseline mb-2">
                        <h5 class="card-title">@question.Text</h5>
                    </div>

                </div>

                <div class="card-footer bg-transparent border-0">
                    <span class="d-flex gap-1 justify-content-end">
                        <a title="Editar" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-primary rounded-circle opcao-card">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <a title="Excluir" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>