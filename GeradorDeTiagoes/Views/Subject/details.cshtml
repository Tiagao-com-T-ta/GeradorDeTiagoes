@using GeradorDeTiagoes.WebApp.ViewModels
@model SubjectDetailsViewModel

@{
    ViewBag.Titulo = "Detalhes da Matéria";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewBag.Titulo</h2>
    <a href="/subject" class="btn btn-outline-secondary">
        <span class="material-icons align-middle">arrow_back</span>
        Voltar
    </a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-4">
        <div class="row gy-3">
            <div class="col-md-6">
                <label class="text-muted mb-0">Nome da Matéria</label>
                <div class="fw-semibold fs-5">@Model.Name</div>
            </div>
            <div class="col-md-3">
                <label class="text-muted mb-0">Série</label>
                <div class="fw-semibold">@Model.GradeLevel</div>
            </div>
            <div class="col-md-3">
                <label class="text-muted mb-0">Disciplina</label>
                <div class="fw-semibold">@Model.DisciplineName</div>
            </div>
            <div class="col-md-3">
                <label class="text-muted mb-0">Qtd. de Questões</label>
                <div class="fw-semibold">@Model.QuestionCount</div>
            </div>
        </div>

        <div class="d-flex gap-2 justify-content-end mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <span class="material-icons align-middle">edit</span>
                Editar
            </a>
        </div>
    </div>
</div>
