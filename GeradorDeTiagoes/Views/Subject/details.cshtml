@using GeradorDeTiagoes.WebApp.ViewModels
@model SubjectDetailsViewModel

@{
    ViewBag.Titulo = "Detalhes da Matéria";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes da Matéria</h3>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                        @ViewBag.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="row my-4">
                    <div class="col-md-6 mt-2">
                        <label class="form-label"><strong>Nome:</strong></label>
                        <p class="form-control-plaintext">@Model.Name</p>
                    </div>

                    <div class="col-md-6 mt-2">
                        <label class="form-label"><strong>Série:</strong></label>
                        <p class="form-control-plaintext">@Model.GradeLevel</p>
                    </div>

                    <div class="col-md-6 mt-2">
                        <label class="form-label"><strong>Disciplina:</strong></label>
                        <p class="form-control-plaintext">@Model.DisciplineName</p>
                    </div>

                    <div class="col-md-6 mt-2">
                        <label class="form-label"><strong>Questões vinculadas:</strong></label>
                        <p class="form-control-plaintext">@Model.QuestionCount</p>
                    </div>
                </div>

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                    <a href="/subject" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>