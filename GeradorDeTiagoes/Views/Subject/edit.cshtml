@using GeradorDeTiagoes.WebApp.ViewModels
@model SubjectFormViewModel

@{
    ViewBag.Titulo = "Edição de Matéria";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Edit" asp-route-id="@Model.Id">
                    <h3>Edição de Matéria</h3>

                    @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                            @ViewData.ModelState["Name"]!.Errors.First().ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Name" class="control-label fs-5">Nome:</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="GradeLevel" class="control-label fs-5">Série:</label>
                        <select asp-for="GradeLevel" asp-items="@(new SelectList(ViewBag.GradeLevels))" class="form-select"></select>
                        <span asp-validation-for="GradeLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="DisciplineId" class="control-label fs-5">Disciplina:</label>
                        <select asp-for="DisciplineId" asp-items="@(new SelectList(ViewBag.Disciplines, "Id", "Name"))" class="form-select"></select>
                        <span asp-validation-for="DisciplineId" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/subject">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}